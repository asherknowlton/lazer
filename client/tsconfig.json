{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "target": "es6",
    "moduleResolution": "Node",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "pages/*": ["./src/pages/*"]
    },
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
